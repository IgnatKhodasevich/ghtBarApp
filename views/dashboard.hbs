<div class="row h-100 justify-content-center align-items-center">
    <div class="col-sm-3 col-md-3">

    </div>
    <div class="col-sm-3 col-md-5">
        <h1 id="title">Welcome to GHT Bar, {{ username }}</h1>
    </div>
    <div class="col-sm-3 col-md-2"></div>
    <a href="/logout" class="btn btn-light" name="registerButton">Log out</a>
</div>
    <div class="row h-100 justify-content-center align-items-center">
<form>
    {{#if items}}

            <div class="media-body">
                {{#each items }}
                    <div class="media border p-1">
                        <img src="/static/images/{{this.image}}"
                             class="align-self-start mr-3"
                             style="width:100px; height: auto;">
                        <div class="media-body">
                            <h4> {{this.name}}</h4>
                            <p>&bull; {{this.strength}} %</p>
                            <p>&bull; {{this.countryOrigin}}</p>
                            <p>&bull; {{this.type}}</p>
                        </div>
                    </div>
                    {{/each}}
            </div>

    {{else}}
        <p><em>There are currently no items.</em></p>
    {{/if}}
</form>
</div>


